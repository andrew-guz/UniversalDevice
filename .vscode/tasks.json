{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake -DCMAKE_CXX_COMPILER=/usr/bin/clang++-17 --fresh . && cmake --build . -j 12",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "format",
            "type": "shell",
            "command": "/usr/bin/clang-format-17 -i --verbose **/*.cpp **/*.h",
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
