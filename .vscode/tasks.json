{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake -DCMAKE_CXX_COMPILER=/usr/bin/clang++-17 -DCMAKE_EXPORT_COMPILE_COMMANDS=1 --fresh .. && cmake --build . -j  2 && cd ..",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clear",
            "type": "shell",
            "command": "mkdir -p build && cd build && make clean && cd ..",
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "format",
            "type": "shell",
            "command": "/usr/bin/clang-format-17 -i --verbose Universal*/**/*.cpp Universal*/**/*.hpp",
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
